<h2>編集画面</h2>
<%= form_with model: @article, url: article_path, local: true do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, autocomplete: true %>
  </div>

  <div class="actions">
    <%= f.submit "記事を更新する" %>
  </div>
<% end%>