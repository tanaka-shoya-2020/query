<%= form_with model: article, local: true do |f| %>
  <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :タイトル %>
      <em>50文字までしか入力できません</em><br />
      <%= f.text_area :title, placeholder: "タイトルを入力してください",class: "form-control",autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :テキスト %><br />
      <%= f.text_area :text,rows: "20",class: "form-control",autocomplete: true %>
    </div>
  </div>

  <div class="col-xs-6">
    <% if article %>
      <div class="border">
        <%= markdown(article.text).html_safe %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "記事を編集する",class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end%>

